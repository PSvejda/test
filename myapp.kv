<MainBox>:
    result_label: result_label
    word_input: word_input
    language_button: language_button
    level_button: level_button
    result_layout: result_layout

    BoxLayout:
        orientation: 'vertical'

        # První řádek s tlačítky GER, B1, uložené
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: language_button
                text: 'GER'
                on_release: root.open_language_selection()

            Button:
                id: level_button
                text: 'B1'
                on_release: root.open_level_selection()

            Button:
                text: 'uložené'
                on_release: root.show_saved_sentences()  # Otevře uložené věty v novém okně

            Button:
                text: 'settings'
                on_release: root.open_settings()  # Otevře okno pro nastavení velikosti písma

                


        # Druhý řádek s textovým vstupem
        TextInput:
            id: word_input
            hint_text: 'Zadejte slovo'
            multiline: False

        # Třetí řádek s tlačítkem Generovat větu
        Button:
            text: 'Generovat větu'
            on_press: root.generate_sentence()

        # Čtvrtý řádek pro zobrazení výsledného textu
        Label:
            id: result_label
            text: 'Překlad bude zobrazen zde'
            color: 0.92, 0.45, 0
            size_hint_y: None
            height: 44  # Stanoví výšku pro label

        # Pátý řádek s výslednou větou uvnitř ScrollView
        ScrollView:
            size_hint_y: None
            height: 200  # Nastavíme fixní výšku pro ScrollView

            BoxLayout:
                id: result_layout
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height  # Dynamická výška podle obsahu
